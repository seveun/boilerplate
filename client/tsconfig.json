{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "allowImportingTsExtensions": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@shared/*": ["../shared/*"],
      "@queries/*": ["../shared/supabase/queries/*"],
      "@schemas/*": ["../shared/schema/*"],
      "@components/*": ["./components/*"],
      "@ui/*": ["./ui/*"],
      "@icons/*": ["./ui/Icons/*"],
      "@utils/*": ["./utils/*"],
      "@locales/*": ["./locales/*"],
      "@hooks/*": ["./hooks/*"],
      "@/*": ["./*"]
    },
    "baseUrl": "."
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "../shared/**/*.ts",
    ".next/types/**/*.ts",
    "components/Menu/config.tss",
    "components/HowItWorks",
    "components/Contact",
    "components/ui/basicPaginationtsx",
    "functions/src/services/Game",
    "tailwind.config.js"
  ],
  "exclude": ["node_modules", "functions"]
}
